<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	start-state="listado">
	<secured attributes="ROLE_USER" />
	<var name="perfilNuevo" class="es.beebusiness.domain.Perfil" />
	<on-start>
		<evaluate expression="new es.beebusiness.domain.Perfil()"
			result="perfilNuevo" />
	</on-start>
	<view-state id="listado" view="../pages/perfil/listado.xhtml">
	    <var name="perfileslazy" class="es.beebusiness.controller.lazy.PerfilLazyDataModel"/>
		
		
		<transition on="altaPerfil">
			<evaluate expression="perfilController.altaPerfil(perfilNuevo)" />
			<evaluate expression="new es.beebusiness.domain.Perfil()"
			result="perfilNuevo" />
		</transition>
		
		
		<transition on="eliminarPefil">
			<evaluate expression="perfilController.eliminarPerfil(requestParameters.id)"></evaluate>
		</transition>
	</view-state>


	<end-state id="fin" view="final">
	</end-state>
</flow>