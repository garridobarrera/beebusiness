<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	start-state="listado">
	<secured attributes="ROLE_USER" />
	<var name="provinciaNueva" class="es.beebusiness.domain.Provincia" />
	<on-start>
		<evaluate expression="new es.beebusiness.domain.Provincia()"
			result="provinciaNueva" />
	</on-start>
	<view-state id="listado" view="../pages/provincia/listado.xhtml">
	    <var name="provinciaslazy" class="es.beebusiness.controller.lazy.ProvinciaLazyDataModel"/>
		
		
		<transition on="altaProvincia">
			<evaluate expression="provinciaController.altaProvincia(provinciaNueva)" />
			<evaluate expression="new es.beebusiness.domain.Provincia()"
			result="provinciaNueva" />
		</transition>
		
		
		<transition on="eliminarProvincia">
			<evaluate expression="provinciaController.eliminarProvincia(requestParameters.id)"></evaluate>
		</transition>
		
		<transition on="obtenerProvincia">
			<evaluate expression="provinciaController.obtenerProvincia(requestParameters.id)" result="provinciaNueva"></evaluate>
		</transition>
	</view-state>


	<end-state id="fin" view="final">
	</end-state>
</flow>